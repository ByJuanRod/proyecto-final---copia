---
interface Props {
    nombre: string,
    texto: string,
    img: string,
}

const {nombre, texto, img} = Astro.props;
---

<style>

    img{
        object-fit: contain;
        display: block;
        margin-inline: auto;
        margin-block: 10px;
    }

    p{
        margin-top: 10px;
    }

    article:nth-child(even){

        background: linear-gradient(60deg, var(--fondo3) 50%,
        var(--fondo) 50%) ;
        background-attachment: fixed;
    }

    article:nth-child(odd){
        background: linear-gradient(60deg, var(--fondo3) 50%,
        var(--fondo) 50%);
        background-attachment: fixed;
    }

    article{
        border: 2px solid var(--colorFuente);
        padding: 20px;
        background-color: var(--detalles);
        display: block;
        border-radius: 10px;
        
    }



    aside > h1{
        font-family: var(--titulos);
        font-size: 1.5rem;
        color: var(--colorFuente);
        text-align: center;

    }

    aside > hr{
        width: 60%;
        margin-block: 5px;
        border: 2px solid var(--colorFuente);
        border-radius: 10px;
        margin-inline: auto;
        margin-block: 10px;
    }

    aside > p{
        padding: 10px;
        color: var(--colorFuente);
        font-size: 1rem;
        font-family: var(--texto);
    }

    @media (max-width: 1024px){
        article:nth-child(3){
            grid-column: 1/3;
        }
    }

   
</style>

<article>
    <img src={img} alt={nombre} loading="lazy">
    <aside>
        <h1>{nombre}</h1>
        <hr>
        <p>{texto}</p>
    </aside>
</article>    