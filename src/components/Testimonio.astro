---
interface Props {
    Persona: string,
    Texto: string
}

const {Persona, Texto} = Astro.props;
---

<style>
    .carousel-item{
        width: 100%;
        height: 300px;
        flex: 0 0 auto;
        padding: 30px 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }

    .carousel-item:nth-child(even){
        background: var(--detalles);
    }

    .carousel-item:nth-child(odd){
        background: var(--enfasis);
    }

    .carousel-item > h1{
        text-align: center;
        color: var(--colorFuente);
        font-size: 2rem;
        font-family: var(--titulos);
    }

    .carousel-item > hr{
        width: 60%;
        margin-inline: auto;
        margin-block: 10px;
        border: 3px solid var(--colorFuente);
        border-radius: 10px;
    }

    .carousel-item > p{
        font-size: 1.2rem;
        font-family: var(--texto2);
        text-align: center;
        color: var(--colorFuente);
    }

    @media (max-width: 640px){
        .carousel-item{
            padding: 10px 30px;
            height: 550px;
            padding: 10px 30px;
        }
    }
</style>

<article class="carousel-item">
    <h1>{Persona}</h1>
    <hr>
    <p>{Texto}</p>
</article>
