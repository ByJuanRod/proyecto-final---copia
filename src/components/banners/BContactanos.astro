---
import TituloSeccion from "../TituloSeccion.astro"
---

<style>
    .banner{
        width: 100%;
        min-height: 600px;
        padding: 40px;
       background: linear-gradient(50deg,
        hsla(352, 63%, 47%, 0.576) 30%,
        rgba(12, 7, 1, 0.747)30%,
        rgba(12, 7, 1, 0.753)70%,
        rgba(88, 83, 141, 0.521) 70%),
        url(https://cdn.pixabay.com/photo/2017/08/08/00/17/events-2609526_1280.jpg); 
        background-size: cover;
        background-attachment: fixed;
        border-bottom: 2px solid var(--colorFuente);
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    a{
        padding: 20px 40px;
        text-decoration: none;
        font-size: 1.5rem;
        font-family: var(--texto);
        color: var(--colorFuente);
        background: var(--enfasis);
        border-radius: 50px;
        border: 2px solid var(--colorFuente);
    }

    a:hover{
        background:var(--detalles);
    }

</style>

<header class="banner" >
    <TituloSeccion titulo="¿Algun Evento Importante?" />
    <a href="/contactos">¡Contactanos!</a>
</header> 