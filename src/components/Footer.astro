---
    import { Image } from "astro:assets"
    import Logo from "../../public/lg.png"
---

<style>
    

    .footer-top{
        background-color: var(--fondo);
        display: grid;
        grid-template-columns: repeat(3,1fr);
        padding: 40px;
        gap: 20px;
        border-bottom: 2px solid var(--colorFuente);
    }

    .logo{
        width: 100%;
        height: 300px;
        object-fit: cover;
    }

     h1{
        color: var(--colorFuente);
        font-family: var(--titulos);
        font-size: 2rem;
        margin-block: 15px;
    }

     ul > li{
        margin-block: 10px;
        color: var(--colorFuente);
    }

    ul > li > a:hover{
        text-underline-offset: 10px;
        text-decoration-color: white;

    }


    li::marker{
         content: "▶  ";
    }

    li > a{
        color: var(--colorFuente);
        text-decoration: underline solid transparent;
        text-underline-offset: 5px;
        font-family: var(--texto);
        font-size: 1.2rem;
    }

    .footer-bottom{
        background-color: var(--fondo3);
        background: linear-gradient(90deg, rgba(240, 157, 41, 0.836) 4%, rgba(194, 44, 64, 0.664) 49%, rgba(240, 157, 41, 0.836) 100%);
        padding: 20px;
    }

    .footer-bottom > p{
        text-align: center;
        color: var(--colorFuente);
        font-size: 1.3rem;
        font-family: var(--texto2);
    }

    i{
        margin-inline: 5px;
    }

    @media (max-width: 820px)
    {
        .footer-top
        {
            background-color: var(--fondo);
            display: grid;
            grid-template-columns: repeat(2,1fr);
            padding: 30px;
            gap: 20px;
        }

        aside:has(.logo){
            grid-column: 1/3;
            display: flex;
            justify-content: center;
        }

        .logo{
            width:300px;
            height: 300px;
        }
    }

    @media (max-width:768px){
        .footer-top
        {
            background-color: var(--fondo);
            display: flex;
            flex-direction: column;
            padding: 30px;
            gap: 20px;
        }


        li::marker{
            content: "";
        }
        *{
            text-align: center;
        }
    }

    @media (max-width: 375px){
        li > a{
        font-size: 1rem;
    }
    }


</style>

<footer>
    <section class="footer-top">
        <aside>
           <Image src={Logo} alt="" class="logo">
        </aside>
        <nav>
            <h1>Atajos Rápidos</h1>
            <ul>
                <li><a href="/">Inicio</a></li>
                <li><a href="/Servicios">Servicios</a></li>
                <li><a href="/SobreNostros">Sobre Nosotros</a></li>
                <li><a href="/Sesion">Iniciar Sesión</a></li>
                <li><a href="/Contratar">Contratarnos</a></li>
            </ul>
        </nav>
        <aside class="contactos">
            <h1>Redes Sociales</h1>
            <ul>
                <li>
                    <a href=""><i class="fi fi-brands-facebook"></i>Dream Creators</a>
                </li>
                <li>
                    <a href="https://www.instagram.com/dream_creators_srl?igsh=Mm1kb3g4Y2JsanBu"><i class="fi fi-brands-instagram"></i>
                        dream_creators_srl</a>
                </li>
                <li>
                    <a href="https://x.com/_DreamCreators?s=08"><i class="fi fi-brands-twitter-alt"></i>_DreamCreators</a>
                </li>
            </ul>
            <h1>Ubicación</h1>
            <ul>
                <li>
                    <a href="https://maps.app.goo.gl/QBKJ3RchMHsc7HTPA"><i class="fi fi-rr-navigation"></i>Plaza Lopez, La Vega</a>
                </li>
            </ul>
        </aside>
    </section>
    <section class="footer-bottom">
        <p>&copy; Todos los derechos Reservados.</p>
    </section>

</footer>
