---
interface Props {
    nombre: string,
    imagen: string
}

const {nombre, imagen } = Astro.props
---

<style>

    img{
        width: 100%;
        height: 200px;
        object-fit: cover;
        outline: 3px solid transparent;
        outline-offset: 10px;
        border-radius: 50%;
        box-shadow:  12px 12px 15px #565d61af,
             -12px -12px 15px #131c2093;
    }


    img:hover{
        outline: 3px solid white;
    }

    h2{
        font-family: var(--titulos);
        font-size: 1.3rem;
        margin-block: 10px;
        text-wrap: balance;
        color: var(--colorFuente);
        text-align: center;
    }
</style>

<article>
    <img src={imagen} alt="">
    <h2>{nombre}</h2>
</article>