---
import Menu from "./Menu.astro"
import BotonScroll from "./BotonScroll.astro"

interface Props {
    titulo: string,
    texto: string
}

const {titulo, texto} = Astro.props;
---
<style>
    header{
        height: 90dvh;
        min-height: 600px;
        background: radial-gradient(circle, rgba(18, 17, 34, 0.644) 41%, rgba(5, 3, 27, 0.519) 71%),url(/fondo.png);
        background-size: cover;
        background-attachment: fixed;
        border-bottom: 2px solid var(--colorFuente);
    }

    section{
        display: grid;
        grid-template-columns: repeat(2,1fr);
        gap: 20px;
        height: 100%;
        width: 100%;
        backdrop-filter: blur(10px);
        padding-block: 10px;
        padding-inline: 30px;
    }

    article, aside{
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        
    }

    article > h1{
        font-family: var(--titulos);
        font-size: 4rem;
      
        color: var(--colorFuente);
    }

    img{
        object-fit: cover;
        filter:contrast(10px)
    }

    p{
        padding: 10px;
        font-family: var(--texto2);
        font-size: 1.3rem;
        color: var(--colorFuente);
        text-wrap: balance;
        line-height: 2rem;
    }

    @media (max-width: 820px)
    {
        section{
            padding-top: 20px;
            display: flex;
            flex-direction: column;
        }

        article > h1{
        font-family: var(--titulos);
        font-size: 3.5rem;
        text-align: center;
        color: var(--colorFuente);

    }
    p{
        text-align: center;
    }

        img{
            width: 400px;
            height: 300px;
        }
    }

    @media (max-width:768px){
        header{
            min-height: 700px;
        }


        article > h1{
        font-family: var(--titulos);
        font-size: 3.5rem;
      
        color: var(--colorFuente);
        text-align: center;
    }

    p{
        padding: 10px;
        font-family: var(--texto2);
        font-size: 1.3rem;
        text-align: center;
        color: var(--colorFuente);
        text-wrap: balance;
        line-height: 2rem;
    }

    }

    @media (max-width: 425px){
        img{
            width: 100%;
            height: 300px;
        }
    }

    @media(max-width: 375px)
    {
        article > h1{
        font-family: var(--titulos);
        font-size: 3rem;
      
        color: var(--colorFuente);
        text-align: center;
    }

    p{
        padding: 5px;
        font-family: var(--texto2);
        font-size: 1rem;
        color: var(--colorFuente);
        text-wrap: balance;
        line-height: 1.2rem;
    }
    }




</style>

<Menu/>
<header>
    <section>
        <article>
            <h1>{titulo}</h1>
            <p>{texto}</p>
        </article>
        <aside>
            <img src="/lg.png" alt="">
        </aside>
    </section>
    <BotonScroll/>
</header>